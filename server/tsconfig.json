{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "lib": [
            "ES2021",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "outDir": "./build"
    },
    "exclude": [
        "node_modules",
    ]
}